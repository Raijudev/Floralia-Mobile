<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Imagen centrada -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo_floralia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Texto centrado ligeramente arriba del centro del logo -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="Floralia Mobile"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationY="52dp"
        app:layout_constraintTop_toTopOf="@id/logoImage"
        app:layout_constraintBottom_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="@id/logoImage"
        app:layout_constraintEnd_toEndOf="@id/logoImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
