<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="9dp">

        <ImageView
            android:id="@+id/imageViewProducto"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_floralia" />

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageViewProducto"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/imageViewProducto"
            android:fontFamily="@font/open_sans"
            android:text="Nombre del producto"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNombre"
            android:layout_alignStart="@id/textViewNombre"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:text="Cantidad: 10"
            android:textColor="#555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCantidad"
            android:layout_alignStart="@id/textViewNombre"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:text="$100.00"
            android:textColor="#27AE60"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
