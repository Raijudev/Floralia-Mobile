<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtUidCorte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/albert_sans"
            android:maxLines="1"
            android:text="UID: #Corte123ABC"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toStartOf="@+id/imgDownloadPdf"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="UID: CORTEXYZ78901234567890ABCDEF" />

        <TextView
            android:id="@+id/txtFechas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/albert_sans"
            android:text="De 01/07/2025 08:00 a 01/07/2025 20:00"
            android:textColor="#555555"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/txtUidCorte"
            tools:text="De 01/07/2025 08:00 a 01/07/2025 20:00" />

        <TextView
            android:id="@+id/txtGeneradoPor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/albert_sans"
            android:text="Generado por: Admin"
            android:textColor="#555555"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/txtFechas"
            tools:text="Generado por: Administrador de Sistema" />

        <TextView
            android:id="@+id/txtTotalPedidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/albert_sans"
            android:text="Pedidos: 25"
            android:textColor="#555555"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/txtGeneradoPor" />

        <TextView
            android:id="@+id/txtTotalVentas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/albert_sans"
            android:text="Ventas: $1,500.00"
            android:textColor="#27AE60"
            android:textSize="16sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/txtTotalPedidos"
            tools:text="Ventas: $1,500.00 MXN" />

        <ImageView
            android:id="@+id/imgDownloadPdf"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Descargar PDF"
            android:src="@drawable/ic_download"
            card_view:tint="#555555"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent" card_view:layout_constraintTop_toTopOf="parent" card_view:layout_constraintVertical_bias="1.0" android:background="?attr/selectableItemBackgroundBorderless" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
